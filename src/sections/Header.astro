---
import "../styles/hamburger.css";
---

<script>
  // Toggle navigation menu on hamburger click
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger");
    const navMenu = document.getElementById("nav-menu");
    const homeLinks = document.querySelectorAll(
      'a[href="/#home"], a[href="#home"]',
    );
    const servicesLinks = document.querySelectorAll(
      'a[href="/#services"], a[href="#services"]',
    );
    const lpgLinks = document.querySelectorAll(
      'a[href="/#lpg"], a[href="#lpg"]',
    );
    const insculptLinks = document.querySelectorAll(
      'a[href="/#insculpt"], a[href="#insculpt"]',
    );
    const servicesSection = document.getElementById("services");
    const lpgSection = document.getElementById("lpg");
    const insculptSection = document.getElementById("insculpt");
    const homeSection = document.getElementById("home");

    if (!hamburger || !navMenu) return;
    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
    });

    // Smooth scroll on homepage; navigate on other pages
    const onHome = location && location.pathname === "/";
    if (onHome && homeSection) {
      homeLinks.forEach((link) =>
        link.addEventListener("click", (e) => {
          e.preventDefault();
          homeSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }),
      );
    }
    if (onHome && servicesSection) {
      servicesLinks.forEach((link) =>
        link.addEventListener("click", (e) => {
          e.preventDefault();
          servicesSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }),
      );
    }
    if (onHome && lpgSection) {
      lpgLinks.forEach((link) =>
        link.addEventListener("click", (e) => {
          e.preventDefault();
          lpgSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }),
      );
    }
    if (onHome && insculptSection) {
      insculptLinks.forEach((link) =>
        link.addEventListener("click", (e) => {
          e.preventDefault();
          insculptSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }),
      );
    }
  });
</script>

