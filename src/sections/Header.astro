---
import "../styles/hamburger.css";
---

<script>
  // Toggle navigation menu on hamburger click
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger");
    const navMenu = document.getElementById("nav-menu");
    const servicesLink = document.querySelector('a[href="#services"]');
    const lpgLink = document.querySelector('a[href="#lpg"]');
    const insculptLink = document.querySelector('a[href="#insculpt"]');
    const servicesSection = document.getElementById("services");
    const lpgSection = document.getElementById("lpg");
    const insculptSection = document.getElementById("insculpt");

    if (!hamburger || !navMenu) return;
    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
    });

    // Ensure in-container smooth scroll to Services inside snap container
    if (servicesLink && servicesSection) {
      servicesLink.addEventListener("click", (e) => {
        e.preventDefault();
        servicesSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    }
    if (lpgLink && lpgSection) {
      lpgLink.addEventListener("click", (e) => {
        e.preventDefault();
        lpgSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    }
    if (insculptLink && insculptSection) {
      insculptLink.addEventListener("click", (e) => {
        e.preventDefault();
        insculptSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    }
  });
</script>

